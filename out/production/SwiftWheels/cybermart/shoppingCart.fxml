<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/fxml" xmlns:fx="http://javafx.com/fxml" fx:controller="cybermart.ShoppingCartController">
   <children>
      <ScrollPane fitToWidth="true">
         <content>
            <VBox fx:id="cartItemsContainer" spacing="10">
               <!-- Cart items will be dynamically added here -->
            </VBox>
         </content>
      </ScrollPane>
      <Button fx:id="purchaseButton" text="Purchase" onAction="#purchaseItems" layoutX="10.0" layoutY="10.0"/>
   </children>
</AnchorPane>
